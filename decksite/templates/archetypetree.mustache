<table class="archetypes">
    <thead>
        <tr>
            <td></td>
            <th class="legend" colspan="{{#hide_num_decks}}2{{/hide_num_decks}}{{^hide_num_decks}}3{{/hide_num_decks}}" data-sortInitialOrder="desc">This Season</th>
            <th class="legend" colspan="{{#hide_num_decks}}2{{/hide_num_decks}}{{^hide_num_decks}}3{{/hide_num_decks}}" data-sortInitialOrder="desc">All Time</th>
        </tr>
        <tr>
            <th data-lockedorder="asc">Archetype</th>
            {{^hide_num_decks}}
                <th data-sortInitialOrder="desc"># Decks</th>
            {{/hide_num_decks}}
            <th data-sortInitialOrder="desc">Record</th>
            <th class="divider" data-sortInitialOrder="desc">Win %</th>
            {{^hide_num_decks}}
                <th data-sortInitialOrder="desc"># Decks</th>
            {{/hide_num_decks}}
            <th data-sortInitialOrder="desc">Record</th>
            <th data-sortInitialOrder="desc">Win %</th>
        </tr>
    </thead>
    <tbody>
        {{#roots}}
            {{#archetype_tree}}
                {{^hide_archetype}}
                    <tr class="archetype archetype-{{depth}}{{#current}} current{{/current}}">
                        <td data-sort="{{sort}}" class="primary initial"><a href="{{url}}">{{name}}</a></td>
                        {{#season}}
                            {{^hide_num_decks}}
                                <td class="n">{{num_decks}}</td>
                            {{/hide_num_decks}}
                            <td class="n">{{> record}}</td>
                            <td class="n divider">{{#show_record}}{{win_percent}}{{/show_record}}</td>
                        {{/season}}
                        {{#all}}
                            {{^hide_num_decks}}
                                <td class="n">{{num_decks}}</td>
                            {{/hide_num_decks}}
                            <td class="n">{{> record}}</td>
                            <td class="n">{{#show_record}}{{win_percent}}{{/show_record}}</td>
                        {{/all}}
                    </tr>
                {{/hide_archetype}}
            {{/archetype_tree}}
        {{/roots}}
    </tbody>
</table>
